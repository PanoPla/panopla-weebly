{
  "manifest": "1",
  "version": "1.0.0",
  "elements": [
    {
      "name": "Embedded Panorama",
      "path": "files",
      "version": "1.0.0",
      "settings": {
        "config": {
          "autopop": true
        },
        "properties": [
          {
            "name": "settings",
            "label": "Settings",
            "type": "group",
            "properties": [
              {
                "name": "pano_url",
                "label": "Embedded Panorama URL",
                "type": "string",
                "default": "https://panopla.com/pano/111/embedded"
              },
              {
                "name": "align",
                "label": "Alignment",
                "type": "align",
                "default": "center"
              },
              {
                "name": "size",
                "label": "Size",
                "type": "select",
                "values": [
                  {"name": "Small", "value": "small"},
                  {"name": "Medium", "value": "medium"},
                  {"name": "Large", "value": "large"},
                  {"name": "Extra Large", "value": "xlarge"},
                  {"name": "Big", "value": "xxlarge"},
                  {"name": "Auto", "value": "auto"}
                ],
                "default": "Auto"
              }
            ]
          }
        ]
      }
    }
  ]
}